{
  "name": "vscode-3d-preview",
  "publisher": "tatsy",
  "displayName": "vscode-3d-preview",
  "description": "VS Code 3D Preview",
  "version": "0.2.1",
  "icon": "logo.png",
  "homepage": "https://github.com/tatsy/vscode-3d-preview",
  "repository": {
    "type": "git",
    "url": "https://github.com/tatsy/vscode-3d-preview"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "3d",
    "obj",
    "off",
    "pcd",
    "ply",
    "stl",
    "xyz",
    "mesh",
    "polygon",
    "point cloud",
    "point set",
    "viewer",
    "vscode"
  ],
  "activationEvents": [
    "onCustomEditor:3dpreview.viewer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "capabilities": {
      "untrustedWorkspaces": {
        "supported": true
      }
    },
    "customEditors": [
      {
        "viewType": "3dpreview.viewer",
        "displayName": "3D Viewer Light",
        "selector": [
          {
            "filenamePattern": "*.obj"
          },
          {
            "filenamePattern": "*.stl"
          },
          {
            "filenamePattern": "*.off"
          },
          {
            "filenamePattern": "*.ply"
          },
          {
            "filenamePattern": "*.pcd"
          },
          {
            "filenamePattern": "*.xyz"
          },
          {
            "filenamePattern": "*.npy"
          }
        ]
      }
    ],
    "configuration": {
      "title": "VSCode 3D Preview",
      "properties": {
        "3dpreview.hideControlsOnStart": {
          "type": "boolean",
          "default": false,
          "description": "Fold the control panel if true is specified."
        },
        "3dpreview.showPoints": {
          "type": "boolean",
          "default": false,
          "description": "Show point cloud."
        },
        "3dpreview.showWireframe": {
          "type": "boolean",
          "default": false,
          "description": "Show wireframe."
        },
        "3dpreview.showMesh": {
          "type": "boolean",
          "default": true,
          "description": "Show mesh triangles."
        },
        "3dpreview.showGridHelper": {
          "type": "boolean",
          "default": true,
          "description": "Show grid helper."
        },
        "3dpreview.backgroundColor": {
          "type": "string",
          "default": "#121212",
          "description": "Default background color."
        },
        "3dpreview.pointColor": {
          "type": "string",
          "default": "#cc0000",
          "description": "Default point color."
        },
        "3dpreview.wireframeColor": {
          "type": "string",
          "default": "#0000ff",
          "description": "Default wireframe color."
        },
        "3dpreview.fogDensity": {
          "type": "number",
          "default": 0,
          "description": "Fog density."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/dat-gui": "^0.6.3",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@types/three": "^0.146.0",
    "@types/vscode": "^1.73.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "tslint": "^6.1.3",
    "typescript": "^4.9.3",
    "vsce": "^2.14.0",
    "vscode-test": "^1.6.1"
  }
}
